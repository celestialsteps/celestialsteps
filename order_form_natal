  <script src="includes/components.js"></script> 

    <script>
        // Initialize form elements
        document.addEventListener('DOMContentLoaded', function() {
            populateDayOptions();
            populateYearOptions();
            populateHourOptions();
            populateMinuteOptions();
            validateForm();
        });

      
        // Populate day options
        function populateDayOptions() {
            const daySelect = document.getElementById('birthDay');
            for (let i = 1; i <= 31; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i;
                daySelect.appendChild(option);
            }
        }

        // Populate year options
        function populateYearOptions() {
            const yearSelect = document.getElementById('birthYear');
            const currentYear = new Date().getFullYear();
            for (let i = currentYear; i >= 1900; i--) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i;
                yearSelect.appendChild(option);
            }
        }

        // Populate hour options
        function populateHourOptions() {
            const hourSelect = document.getElementById('birthHour');
            for (let i = 1; i <= 12; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i.toString().padStart(2, '0');
                hourSelect.appendChild(option);
            }
        }

        // Populate minute options
        function populateMinuteOptions() {
            const minuteSelect = document.getElementById('birthMinute');
            for (let i = 0; i < 60; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = i.toString().padStart(2, '0');
                minuteSelect.appendChild(option);
            }
        }

        // Toggle time inputs when "time unknown" is checked
        function toggleTimeInputs() {
            const timeUnknown = document.getElementById('timeUnknown');
            const timeInputs = document.querySelectorAll('#birthHour, #birthMinute, #birthAmPm');
            
            timeInputs.forEach(input => {
                input.disabled = timeUnknown.checked;
                if (timeUnknown.checked) {
                    input.value = '';
                }
            });
        }

        // Service selection
        function selectService(serviceType, price) {
            const radio = document.getElementById(serviceType);
            radio.checked = true;
            
            const serviceNames = {
                'advanced': 'Advanced Birth Chart Reading',
                'consultation': 'Astrology Consultation'
            };
            
            const serviceDurations = {
                'advanced': '90 minutes + written report',
                'consultation': '60 minutes + follow-up summary'
            };
            
            document.getElementById('selectedServiceName').textContent = serviceNames[serviceType];
            document.getElementById('selectedServiceDuration').textContent = serviceDurations[serviceType];
            document.getElementById('totalPrice').textContent = `€${price}`;
            
            validateForm();
        }

        // Form validation
        function validateForm() {
            const requiredFields = [
                'firstName', 'lastName', 'email', 'birthDay', 'birthMonth', 'birthYear', 
                'birthCity', 'birthCountry'
            ];
            
            const serviceSelected = document.querySelector('input[name="serviceType"]:checked');
            const submitButton = document.getElementById('submitButton');
            
            let allValid = true;
            
            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    allValid = false;
                }
            });
            
            if (!serviceSelected) {
                allValid = false;
            }
            
            submitButton.disabled = !allValid;
        }

        // Add event listeners for form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('birthChartForm');
            const inputs = form.querySelectorAll('input, select, textarea');
            
            inputs.forEach(input => {
                input.addEventListener('change', validateForm);
                input.addEventListener('input', validateForm);
            });
        });

        // Form submission
        document.getElementById('birthChartForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect form data
            const formData = new FormData(this);
            const data = {};
            
            for (let [key, value] of formData.entries()) {
                data[key] = value;
            }
            
            // In a real application, you would send this data to your server
            console.log('Order submitted:', data);
            
            // Show success message
            alert('Thank you for your order! We will contact you within 24 hours to schedule your birth chart reading. Please check your email for confirmation details.');
            
            // Reset form
            this.reset();
            document.getElementById('totalPrice').textContent = '€0';
            document.getElementById('selectedServiceName').textContent = 'Please select a service';
            document.getElementById('selectedServiceDuration').textContent = '-';
            document.getElementById('submitButton').disabled = true;
        });

       
    </script>
</body>
